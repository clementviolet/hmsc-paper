	journal = {Ecography},
	keywords = {Biogeography, Macroecology, Model improvement, Spatial modeling, Spatial structure, Species Distribution Modeling},
	number = {n/a},
	title = {Predicting the magnitude of residual spatial autocorrelation in geographical ecology},
	url = {https://onlinelibrary.wiley.com/doi/abs/10.1111/ecog.05403},
