	journal = {Oikos},
	number = {5},
	pages = {882-892},
	title = {Let the concept of trait be functional!},
	url = {https://onlinelibrary.wiley.com/doi/abs/10.1111/j.0030-1299.2007.15559.x},
	volume = {116},
	year = {2007},
