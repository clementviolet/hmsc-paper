	author = {Drijfhout, Sybren and Bathiany, Sebastian and Beaulieu, Claudie and Brovkin, Victor and Claussen, Martin and Huntingford, Chris and Scheffer, Marten and Sgubin, Giovanni and Swingedouw, Didier},
