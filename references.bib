	journal = {Restoration Ecology},
	keywords = {Characteristic Length Scale, Fouling Community, Hysteresis, Kelp Bed, Marine Ecosystem, Phase shift},
	number = {1},
	pages = {140-147},
	title = {Knowing when (not) to attempt ecological restoration},
	url = {https://onlinelibrary.wiley.com/doi/abs/10.1111/rec.12413},
