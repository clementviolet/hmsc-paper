	doi = {https://doi.org/10.1111/ddi.13211},
	eprint = {https://onlinelibrary.wiley.com/doi/pdf/10.1111/ddi.13211},
	journal = {Diversity and Distributions},
	keywords = {Aquatic invasions, Bioclimatic variables, Ecological niche model, Feature selection, Maxent, Model tuning, Niche conservatism, Predictor selection, Species distribution model, Transferability},
	month = {December},
	number = {n/a},
	title = {Predictor complexity and feature selection affect Maxent model transferability: Evidence from global freshwater invasive species},
