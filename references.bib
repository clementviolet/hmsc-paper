	doi = {https://doi.org/10.1111/1365-2656.13497},
	eprint = {https://besjournals.onlinelibrary.wiley.com/doi/pdf/10.1111/1365-2656.13497},
	journal = {Journal of Animal Ecology},
	keywords = {Acoustic telemetry, Biologging, Habitat use, Resource selection functions, Vemco VPS},
	number = {7},
	pages = {1787-1800},
	title = {Sea temperature effects on depth use and habitat selection in a marine fish community},
