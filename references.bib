	date-modified = {2021-04-15 13:24:49 +0200},
	doi = {10.1007/s00338-021-02077-y},
	id = {Sommer2021},
	isbn = {1432-0975},
	journal = {Coral Reefs},
	keywords = {Turbid, Flood, Traits, Sedimentation, Marginal, High latitude, Disturbance},
	title = {Trait-based approach reveals how marginal reefs respond to acute and chronic disturbance},
	ty = {JOUR},
