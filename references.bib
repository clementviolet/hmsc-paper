	keywords = {Demography, Evolution, Integral projection models, Life history traits, Mammals},
	number = {4},
	pages = {e03289},
	title = {Can we use a functional trait to construct a generalized model for ungulate populations?},
	url = {https://esajournals.onlinelibrary.wiley.com/doi/abs/10.1002/ecy.3289},
