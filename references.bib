	journal = {Ecology and Evolution},
	keywords = {beta-diversity, biotic homogenization, bird community, boreal forest, community composition, protected areas},
	number = {8},
	pages = {4019-4030},
	title = {Habitat quality is more important than matrix quality for bird communities in protected areas},
