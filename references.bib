	journal = {Functional Ecology},
	keywords = {coral reefs, cryptobenthic, functional traits, mortality, piscivory, social, solitary},
	number = {n/a},
	title = {The role of fishes as food: A functional perspective on predator--prey interactions},
	url = {https://besjournals.onlinelibrary.wiley.com/doi/abs/10.1111/1365-2435.13779},
