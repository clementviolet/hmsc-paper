	eprint = {https://www.pnas.org/content/118/15/e2015094118.full.pdf},
	issn = {0027-8424},
	journal = {Proceedings of the National Academy of Sciences},
	keywords = {Species richness, Latitudinal gradient, Climate change, OBIS, GAM},
