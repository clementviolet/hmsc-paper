	keywords = {Threshold responses, Management, Design, Early warning signals, Detection, Methods},
	pages = {131-137},
	title = {Monitoring for tipping points in the marine environment},
	url = {https://www.sciencedirect.com/science/article/pii/S0301479718315147},
