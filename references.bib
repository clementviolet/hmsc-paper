@article{Windsor_2022,
	abstract = {Abstract Ecological networks have classically been studied at site and landscape scales, yet recent efforts have been made to collate these data into global repositories. This offers an opportunity to integrate and upscale knowledge about ecological interactions from local to global scales to gain enhanced insights from the mechanistic information provided by these data. By drawing on existing research investigating patterns in ecological interactions at continental to global scales, we show how data on ecological networks, collected at appropriate scales, can be used to generate an improved understanding of many aspects of ecology and biogeography---for example, species distribution modelling, restoration ecology and conservation. We argue that by understanding the patterns in the structure and function of ecological networks across scales, it is possible to enhance our understanding of the natural world.},
