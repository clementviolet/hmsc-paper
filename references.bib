	doi = {https://doi.org/10.1111/gcb.15136},
	eprint = {https://onlinelibrary.wiley.com/doi/pdf/10.1111/gcb.15136},
	journal = {Global Change Biology},
	keywords = {climate change, coral reef, disturbance, hurricane, tropical cyclone, typhoon},
	number = {8},
	pages = {4302-4315},
	title = {Towards modelling the future risk of cyclone wave damage to the world's coral reefs},
	url = {https://onlinelibrary.wiley.com/doi/abs/10.1111/gcb.15136},
