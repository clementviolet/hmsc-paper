	keywords = {Biofouling, Coastal ecosystems, Epibenthic, Global change, Invasive, Marine biodiversity, Quantitative synthesis},
	number = {8},
	pages = {1698-1712},
	title = {Non-native species outperform natives in coastal marine ecosystems subjected to warming and freshening events},
