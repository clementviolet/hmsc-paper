	doi = {https://doi.org/10.1111/oik.03726},
	eprint = {https://onlinelibrary.wiley.com/doi/pdf/10.1111/oik.03726},
	journal = {Oikos},
	number = {1},
	pages = {1-7},
	title = {The priority of prediction in ecological understanding},
	url = {https://onlinelibrary.wiley.com/doi/abs/10.1111/oik.03726},
	volume = {126},
	year = {2017},
	bdsk-url-1 = {https://onlinelibrary.wiley.com/doi/abs/10.1111/oik.03726},
