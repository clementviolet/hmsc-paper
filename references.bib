	keywords = {Marine fish, Traits, Spatio-temporal, Community weighted mean, North Sea, Community composition, Climate change, Fishing},
	pages = {205--222},
	title = {Spatio-temporal variation in marine fish traits reveals community-wide responses to environmental change},
