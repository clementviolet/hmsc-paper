	eprint = {https://onlinelibrary.wiley.com/doi/pdf/10.1111/ecog.04444},
	journal = {Ecography},
	keywords = {Network inference, HMSC, Assembly process, Beta diversity, Community structure, Joint species distribution models, Metacommunity paradigm, Variation partitioning},
	read = {1},
	title = {What can observational data reveal about metacommunity processes?},
	url = {https://onlinelibrary.wiley.com/doi/abs/10.1111/ecog.04444},
	year = {2019},
	bdsk-url-1 = {https://onlinelibrary.wiley.com/doi/abs/10.1111/ecog.04444},
