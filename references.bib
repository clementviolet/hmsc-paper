	keywords = {Spatio-temporal, Taxonomy, Functional ecology, Marine community ecology},
	month = {12},
	number = {12},
	pages = {1-19},
	publisher = {Public Library of Science},
	title = {Temporal and spatial differences between taxonomic and trait biodiversity in a large marine ecosystem: Causes and consequences},
