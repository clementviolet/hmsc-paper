	keywords = {Species Distribution Models, Remote Sensing, NDVI, Land Surface Temperature, Alpine species, Styrian Alps, Ex-situ conservation},
	title = {Remote sensing variables improve species distribution models for alpine plant species},
	url = {https://www.sciencedirect.com/science/article/pii/S1439179121000694},
