	eprint = {https://onlinelibrary.wiley.com/doi/pdf/10.1111/geb.13204},
	journal = {Global Ecology and Biogeography},
	keywords = {Abundance, Discrimination capacity, Heteroscedasticity, Occurrence probability, Presence--absence models, Prevalence},
	number = {1},
	pages = {327-338},
	title = {Deconstructing the abundance--suitability relationship in species distribution modelling},
	url = {https://onlinelibrary.wiley.com/doi/abs/10.1111/geb.13204},
	volume = {30},
	year = {2021},
