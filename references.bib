	journal = {Global Ecology and Biogeography},
	keywords = {Bioclimatic envelope models, climate change, cross-validation, clouded Apollo butterfly, Europe, macroecology, Parnassius mnemosyne, sensitivity analysis, uncertainty},
	number = {6},
