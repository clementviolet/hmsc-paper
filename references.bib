	journal = {Ecology},
	keywords = {Community ecology, Distributional limits, Group benefits, Habitat amelioration, Physical stress},
	number = {7},
	pages = {1976-1989},
	title = {THE ROLE OF POSITIVE INTERACTIONS IN COMMUNITIES: LESSONS FROM INTERTIDAL HABITATS},
	url = {https://esajournals.onlinelibrary.wiley.com/doi/abs/10.1890/0012-9658%281997%29078%5B1976%3ATROPII%5D2.0.CO%3B2},
