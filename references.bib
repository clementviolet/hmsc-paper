	doi = {10.1101/2021.05.03.442487},
	elocation-id = {2021.05.03.442487},
	eprint = {https://www.biorxiv.org/content/early/2021/06/15/2021.05.03.442487.full.pdf},
	journal = {bioRxiv},
	keywords = {Mixed-effects models, Generalized linear models, Multilevel models, Hierarchical models, Fixed effects, Random effects},
	publisher = {Cold Spring Harbor Laboratory},
	title = {Fixed or random? On the reliability of mixed-effects models for a small number of levels in grouping variables},
