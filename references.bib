	journal = {Acta Oecologica},
	keywords = {Data transformation, Monotonicity to changes in species abundances, Orl{\'o}ci's paradox, Species relative abundances, Translational invariance, Dissimilarity},
	pages = {103732},
	title = {From the euclidean distance to compositional dissimilarity: What is gained and what is lost},
