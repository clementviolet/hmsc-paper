	journal = {Ecological Monographs},
	keywords = {Bayesian hierarchical modeling approach, Environmental drivers, Functional traits, Intra- and interspecific variations in traits, Species composition, Sundarbans mangrove forest, Trait--environment relationships},
	number = {3},
	pages = {e01454},
	title = {Solving the fourth-corner problem: forecasting ecosystem primary production from spatial multispecies trait-based models},
