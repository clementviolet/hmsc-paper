	eprint = {https://besjournals.onlinelibrary.wiley.com/doi/pdf/10.1111/1365-2745.13578},
	journal = {Journal of Ecology},
	keywords = {Grasslands, Productivity, Species richness-area relationship, Statistical scaling, Upscaling},
	number = {n/a},
	title = {A graphical null model for scaling biodiversity-ecosystem functioning relationships},
