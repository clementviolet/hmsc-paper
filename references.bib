	journal = {Proceedings of the Royal Society B: Biological Sciences},
	keywords = {Ocean acidification, Farming, Predation, Prey, Bottom-up processes, Top-down processes},
	number = {1954},
	pages = {20210475},
	title = {Positive species interactions strengthen in a high-CO<sub>2</sub> ocean},
