	journal = {Statistics in Medicine},
	keywords = {imputation model selection, information criteria, missing data analysis, stochastic EM algorithm},
	number = {10},
	pages = {2467-2497},
	title = {Selecting the model for multiple imputation of missing data: Just use an IC!},
	url = {https://onlinelibrary.wiley.com/doi/abs/10.1002/sim.8915},
