	journal = {Oceanologia},
	keywords = {Benthic habitats, Mapping, Spatial characteristics, Puck Bay, Southern Baltic Sea},
	title = {Distribution and extent of benthic habitats in Puck Bay (Gulf of Gda{\'n}sk, southern Baltic Sea)},
