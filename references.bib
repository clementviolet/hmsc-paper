	journal = {Journal of Applied Ecology},
	keywords = {Beta diversity, Ecological representation, Ecosystem monitoring, Environmental diversity, Nearest neighbour, Reserve selection, Sampling design, Species turnover},
	number = {n/a},
	title = {Using generalised dissimilarity modelling and targeted field surveys to gap-fill an ecosystem surveillance network},
