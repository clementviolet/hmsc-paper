	journal = {Oikos},
	keywords = {Coverage, Hill numbers, Rarefaction, Rarity, Species Diveristy},
	number = {3},
	pages = {321-338},
	title = {A conceptual guide to measuring species diversity},
	url = {https://onlinelibrary.wiley.com/doi/abs/10.1111/oik.07202},
	volume = {130},
	year = {2021},
