	journal = {Oikos},
	keywords = {Body Size, Fish Community, Ontogenetic Diet Shifts, Temperature, Trophic Networks},
	number = {n/a},
	title = {Comparison of size-structured and species-level trophic networks reveals antagonistic effects of temperature on vertical trophic diversity at the population and species level},
