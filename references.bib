	journal = {Philosophical Transactions of the Royal Society B: Biological Sciences},
	number = {1854},
	pages = {20210131},
	title = {Marine protected areas in the context of climate change: key challenges for coastal social-ecological systems},
	url = {https://royalsocietypublishing.org/doi/abs/10.1098/rstb.2021.0131},
	volume = {377},
