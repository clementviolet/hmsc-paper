	journal = {Journal of Biogeography},
	keywords = {boosted regression trees, ecological niche models, gjam, incipient invasive species, range margin},
	number = {n/a},
	title = {Improving predictions of range expansion for invasive species using joint species distribution models and surrogate co-occurring species},
