	issn = {0272-7714},
	journal = {Estuarine, Coastal and Shelf Science},
	keywords = {null models, ecomorphological traits, environmental filters, functional niche, functional diversity indices},
	number = {3},
	pages = {443-456},
	title = {Limiting similarity, niche filtering and functional diversity in coastal lagoon fish communities},
	url = {https://www.sciencedirect.com/science/article/pii/S0272771406003945},
	volume = {71},
	year = {2007},
	bdsk-url-1 = {https://www.sciencedirect.com/science/article/pii/S0272771406003945},
