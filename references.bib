	issn = {0378-1127},
	journal = {Forest Ecology and Management},
	keywords = {Beta diversity, Community dissimilarity, Discriminating avalanche, Taxonomic distance, Trait distance, Phylogenetic distance},
	pages = {40-47},
	title = {Discriminating among forest communities based on taxonomic, phylogenetic and trait distances},
	url = {https://www.sciencedirect.com/science/article/pii/S0378112718316293},
	volume = {440},
