	issn = {0272-7714},
	journal = {Estuarine, Coastal and Shelf Science},
	keywords = {Thresholds, Tipping points, Marine protected areas, Multiple stressors, Natural capital, Poole harbour},
	pages = {112 - 123},
	title = {Detecting ecological thresholds and tipping points in the natural capital assets of a protected coastal ecosystem},
