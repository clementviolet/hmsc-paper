	keywords = {Biodiversity, Distance measures, Ecosystem functioning, Functional diversity, Mixed data, Species coexistence},
	number = {3},
	pages = {443-448},
	title = {Towards a more balanced combination of multiple traits when computing functional differences between species},
	url = {https://besjournals.onlinelibrary.wiley.com/doi/abs/10.1111/2041-210X.13537},
