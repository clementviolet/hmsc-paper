	doi = {https://doi.org/10.1111/gcb.12694},
	eprint = {https://onlinelibrary.wiley.com/doi/pdf/10.1111/gcb.12694},
	journal = {Global Change Biology},
	keywords = {Amphibolis antarctica, Animal-borne video, Chelonia mydas, Climate change, Disturbance, Extreme events, Green turtle, Heat wave},
	number = {4},
	pages = {1463-1474},
	title = {Extreme temperatures, foundation species, and abrupt ecosystem change: an example from an iconic seagrass ecosystem},
	url = {https://onlinelibrary.wiley.com/doi/abs/10.1111/gcb.12694},
