	journal = {Oikos},
	number = {1},
	pages = {3-19},
	title = {Direct experimental evidence for alternative stable states: a review},
	url = {https://onlinelibrary.wiley.com/doi/abs/10.1111/j.0030-1299.2005.13962.x},
	volume = {110},
